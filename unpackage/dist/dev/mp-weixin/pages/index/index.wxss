
.content {
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
}
.banner
	{
		width: 101%;
		margin-right: 1%;
}
.select_content
	{
		width: 100%;
		display: flex;
        justify-content: center;
		flex-wrap: nowrap;
}
.select_menu
	{
		width: 200rpx;
		height: 230rpx;
		margin: 30rpx 20rpx;
		position: relative;
}
.select_icon
	{
		width: 200rpx;
		height: 200rpx;
}
.select_title
	{
		position: absolute;
		bottom: 30rpx;
		left: 0;
		width: 100%;
		text-align: center;
		height: 20rpx;
}
.comment_content
	{
		width: 100%;
		position: relative;
}
.comment_title
	{
		font-size: 38rpx;
		text-align: center;
		margin-top: 30rpx;
}
.comment_icon
	{
		width: 50rpx;
		height: 50rpx;
		top: 30rpx;
		position: absolute;
}
.comment_input
	{
		margin:50rpx 193rpx;
		width: 300rpx;
		height: 50rpx;
		border: 1px solid #b6b6b6;
		border-radius: 10px;
		padding:10rpx 30rpx;
}
.comment_btn
	{
		width: 30rpx;
		height: 30rpx;
		position: absolute;
		right: 220rpx;
		top: 148rpx;
}
.comment_list
	{
		width: 90%;
		background: #f6f6f6;
		height: 300rpx;
		margin-left: 5%;
}

